<UserControl x:Class="cctb_wpf.ContriGraph"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:cctb_wpf"
             mc:Ignorable="d" Width="960" Height="300"
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Canvas x:Name="rulerleft" Width="20" HorizontalAlignment="Left" Margin="0,20,0,0">
            <TextBlock x:Name="r_7" Text="日" Foreground="WhiteSmoke"/>
            <TextBlock x:Name="r_2" Text="二" Foreground="WhiteSmoke"/>
            <TextBlock x:Name="r_4" Text="四" Foreground="WhiteSmoke"/>
            <TextBlock x:Name="r_6" Text="六" Foreground="WhiteSmoke"/>
        </Canvas>
        <Canvas x:Name="ruler_top" Height="20" VerticalAlignment="Top" Margin="20,0,0,0"/>
        <Canvas x:Name="graph" Margin="20,20,0,0">

        </Canvas>
    </Grid>
</UserControl>
